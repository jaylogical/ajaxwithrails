<p id="notice"><%= notice %></p>

<h1>Books</h1>
Total Books <%= @books.count %>
<table id="books">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @books%>
  </tbody>
</table>

<br>

<div id="newbook">
  <%= link_to 'New Book', new_book_path, remote: true, class: 'btn btn-primary' %>
</div>
<br>

<div id="editbook">
  <%= link_to 'Edit', edit_book_path(@books), :remote => true, class: 'btn btn-primary' %>
</div>